<!DOCTYPE html>
<html ng-app="taskApp">
    <head>
        <title>Task App</title>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-resource.min.js"></script>
        <script src="/main.js"></script>
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
        <link rel='stylesheet' href='/main.css' />
    </head>
<body>
    <div ng-controller="TasksCtrl">
        <div class="col-xs-12 col-sm-3 clearfix">
            <h2>New Task</h2>
            <div class="form-group">
                <label>Name</label>
                <input ng-model="newTask.name" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Notes</label>
                <input ng-model="newTask.note" type="text" class="form-control" />
            </div>
            <button ng-click="create()" class="btn btn-primary">Create</button>
        </div>

        <div class="col-xs-12 col-sm-9 clearfix">
            <h2>Tasks</h2>
            <table class="table table-striped">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Notes</th>
                    <th>Completed</th>
                    <th>Updated</th>
                    <th>Action</th>
                </tr>
                <tr ng-repeat="task in tasks">
                    <td>{{ task._id }}</td>
                    <td>{{ task.name }}</td>
                    <td>{{ task.note }}</td>
                    <td>{{ task.completed }}</td>
                    <td>{{ task.updated_at }}</td>
                    <td><button ng-click="delete($index)" class="btn btn-danger">Delete</button></td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>